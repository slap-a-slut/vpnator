{
  "name": "xray-control-plane",
  "version": "0.1.0",
  "private": true,
  "description": "Backend service for managing XRAY control plane",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "tsx watch src/server.ts",
    "dev:worker": "ROLE=worker tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:worker": "ROLE=worker node dist/server.js",
    "export": "tsx scripts/export.ts",
    "import": "tsx scripts/import.ts",
    "test": "vitest run",
    "test:e2e": "NODE_ENV=test PROVISION_DRY_RUN=true vitest run test/e2e-dry-run-flow.e2e.test.ts",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier -w .",
    "prisma:generate": "prisma generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@prisma/client": "^6.0.0",
    "@types/ssh2": "^1.15.5",
    "bullmq": "^5.67.3",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.9.2",
    "pino": "^10.3.1",
    "ssh2": "^1.17.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "prisma": "^6.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
