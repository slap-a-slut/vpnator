NODE_ENV=development
ROLE=api
HOST=0.0.0.0
PORT=3000
LOG_LEVEL=info
ADMIN_API_KEYS=change-me-admin-key
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SWAGGER_ENABLED=true
PROVISION_DRY_RUN=false
INSTALL_LOG_DIR=var/install-logs
XRAY_STORE_MODE=file
REDIS_URL=redis://localhost:6379

# Secrets / tokens
# Generate a new key (32 bytes base64):
#   node -e "console.log(require('node:crypto').randomBytes(32).toString('base64'))"
MASTER_KEY=AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
TOKEN_SALT=change-me-token-salt

# Local Postgres (via docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/xray_control_plane?schema=public
